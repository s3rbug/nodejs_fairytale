<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Books</title>
  <link href="/public/css/styles.css" rel="stylesheet" type="text/css">
</head>

<body>
  <h1>Books</h1>

  <ul>
    <% books.forEach(function(book) { %>
      <li>
        <a class="link" href="/books/<%= book.id %>">
          <%= book.title %>
        </a>
      </li>
      <% }); %>
  </ul>

  <h2>Create New Book</h2>
  <form class="form" action="/books" method="POST">

    <label for="title">Title:</label>
    <input type="text" id="new-title" name="title" required>

    <label for="description">Author:</label>
    <input type="text" id="new-author" name="author" required>

    <label for="pages">Pages:</label>
    <input type="number" min="0" step="1" id="new-pages" name="pages" required>

    <button type="submit">Create</button>
  </form>
</body>

</html>