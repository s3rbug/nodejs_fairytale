<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Fairytales</title>
  <link href="/public/css/styles.css" rel="stylesheet" type="text/css">
</head>

<body>
  <h1>Fairytales</h1>

  <ul>
    <% fairytales.forEach(function(fairytale) { %>
      <li>
        <a class="link" href="/fairytales/<%= fairytale.id %>">
          <%= fairytale.title %>
        </a>
      </li>
      <% }); %>
  </ul>

  <h2>Create New Fairytale</h2>
  <form class="form" action="/fairytales" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="new-title" name="title" required>

    <label for="description">Description:</label>
    <input type="text" id="new-description" name="description" required>

    <label for="rating">Rating:</label>
    <input type="number" min="0" max="5" step="0.1" id="new-rating" name="rating" required>
    <button type="submit">Create</button>
  </form>
</body>

</html>